<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_page_back"
    android:orientation="vertical"
   >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_page_back"
        tools:context=".ui.activity.MainActivity">

        <LinearLayout
            android:id="@+id/top1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Global Covid Report"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
       />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/view_all1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"

                    android:fontFamily="sans-serif-smallcaps"
                    android:text="View all"
                    android:textAlignment="viewEnd"
                    android:textSize="15sp" />

            </LinearLayout>


        </LinearLayout>

       <LinearLayout
                 android:layout_below="@id/top1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="10dp"

                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"

                            android:text="Confirmed"
                            android:textAlignment="center"

                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/confirmed_cases_id"
                            android:inputType="number"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:text="4621684"
                            android:textAlignment="center"

                            android:textSize="20sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"

                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"

                        android:text="Acive"
                        android:textAlignment="center"

                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/Active_cases_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"

                        android:text="4621684"
                        android:textAlignment="center"

                        android:textSize="20sp"
                        tools:ignore="TouchTargetSizeCheck" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"

                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"

                        android:text="Recovered"
                        android:textAlignment="center"

                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/Recovered_cases_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"

                        android:text="4621684"
                        android:textAlignment="center"

                        android:textSize="20sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"

                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"

                        android:text="Death"
                        android:textAlignment="center"

                        android:textSize="20sp" />

                    <TextView
                        android:inputType="number"
                        android:id="@+id/Death_cases_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="4621684"
                        android:textAlignment="center"

                        android:textSize="20sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"
                   android:layout_weight="1"
                   android:fontFamily="@font/acme"
                   android:text="Symptoms /Exercise"
                   android:textColor="@android:color/black"
                   android:textSize="20sp" />

               <TextView
                   android:id="@+id/txtViewSymptoms"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="15dp"
                   android:fontFamily="sans-serif-smallcaps"
                   android:text="View all"
                   android:textSize="15sp" />

           </LinearLayout>



           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/recyclerView2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
               tools:itemCount="3"
               tools:listitem="@layout/item_symtoms" />



           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"
               android:padding="10dp"
               app:cardBackgroundColor="@color/colorPrimary"
               app:cardCornerRadius="5dp"
               app:cardElevation="5dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="130dp"
                   android:layout_margin="10dp"
                   android:orientation="horizontal"
                   android:padding="10dp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_marginLeft="10dp"
                       android:layout_weight="1"
                       android:background="@color/colorPrimary"
                       android:orientation="vertical"
                       android:padding="10dp">

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="10dp"

                           android:text="Click Here to Book your vaccination slot"
                           android:textColor="@color/white"
                           android:textSize="15sp" />

                       <Button
                           android:id="@+id/btnKnowMore"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="10dp"
                           android:layout_marginTop="10dp"
                           android:paddingLeft="20dp"
                           android:paddingRight="20dp"
                           android:text="Book Slot"
                           android:textAllCaps="false"
                           android:textColor="@color/white"
                           android:textSize="14sp" />
                   </LinearLayout>


                   <ImageView
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:layout_gravity="center"
                       android:src="@drawable/corona" />

               </LinearLayout>

           </androidx.cardview.widget.CardView>


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"

                   android:text="Precautions"
                   android:layout_weight="1"
                   android:textColor="@color/black"
                   android:textSize="20sp" />

               <TextView
                   android:id="@+id/txtViewPrecautions"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="15dp"
                   android:fontFamily="sans-serif-smallcaps"
                   android:text="View all"
                   android:textSize="15sp" />

           </LinearLayout>


           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/recyclerViewPrecautions"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
               tools:itemCount="6"
               tools:listitem="@layout/item_symtoms" />



        </LinearLayout>

    </RelativeLayout>

</ScrollView>